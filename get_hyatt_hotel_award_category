import json

# load the JSON file
with open('hotels.json', 'r') as f:
    hotels = json.load(f)

# loop through the hotels
for hotel_code, hotel in hotels.items():
    spirit_code = hotel.get('spiritCode')
    award_category_key = hotel.get('awardCategory', {}).get('key')
    award_category_label = hotel.get('awardCategory', {}).get('label')

    # print the required fields
    print('spiritCode:', spirit_code)
    print('awardCategory.Key:', award_category_key)
    print('awardCategory.Label:', award_category_label)
    print('-------')